(common) {
  errors
  log . {
    class error
  }
  reload
  loadbalance
  cache
  loop
  local

  prometheus :9153

  health {
    lameduck 5s
  }
}

(k8s_gateway_main) {
  forward . 10.10.1.3:53
}

(k8s_gateway_staging) {
  forward . 10.12.1.3:53
}

# Hack to prevent the gatway returning 127.0.0.1 from /etc/hosts
gateway.zinn.tech {
  import common
  template IN A gateway.zinn.tech {
    answer "{{ .Name }} 60 IN A 10.0.0.1"
  }
  forward . 8.8.8.8
}

test.zinn.ca {
  import common
  import k8s_gateway_staging
}

zinn.ca {
  import common
  hosts /host/etc/hosts {
    ttl 1
    reload 5s
    fallthrough
  }
  import k8s_gateway_main
}

. {
  import common
  hosts /host/etc/hosts {
    ttl 1
    reload 5s
  }
}
